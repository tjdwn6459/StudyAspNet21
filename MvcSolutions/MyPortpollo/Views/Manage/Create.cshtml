@model MyPortpolio.Models.Manage

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<script src="~/Plugin/ckeditor_4.16.0_standard/ckeditor/ckeditor.js"></script>

<div class="col-lg col-md ml-auto mr-auto">
    <div class="card card-login">
        <div class="section section-contacts" style="padding: 10px">
            <div class="row">
                <div class="col-md-11 ml-auto mr-auto">
                    <h3 class="text-center " style=" font-weight:bold; color:black; vertical-align:top">Board</h3>
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Cate" class="control-label"></label>
                            <select asp-for="Cate" class="form-control">
                                <option value="">선택</option>
                                <option value="Index">Index</option>
                                <option value="Profile">Profile</option>
                                <option value="Portpolio">Portpolio</option>
                            </select>

                            <span asp-validation-for="Cate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Subject" class="control-label"></label>
                            <input asp-for="Subject"  class="form-control"></input>
                            <span asp-validation-for="Subject" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Contents" class="control-label"></label>
                            <textarea asp-for="Contents" id="Editor Contents" class="form-control"></textarea>
                            <script>CKEDITOR.replace("Editor Contents");</script>
                            <span asp-validation-for="Contents" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-success">리스트</a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>


